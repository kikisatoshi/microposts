<h1><%= t('view.Settings') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: t('view.Kirameki Taro') %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', placeholder: "taro.kirameki@example.com" %>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control', placeholder: t('view.Japan') %>

      <%= f.label :profile %>
      <%= f.text_area :profile, class: 'form-control', placeholder: t('view.Write your profile') %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, t('view.Confirmation') %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit t('view.Update my account'), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
