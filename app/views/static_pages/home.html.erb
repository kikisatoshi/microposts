<% if logged_in? %>
  <div class="row">
    <!-- aside:余談・補足情報のセクションであることを示す-->
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t('view.Micropost Feed') %></h3>
      <%= page_entries_info @feed_items %>
      <%= render 'shared/feed' %>
      <%= paginate @feed_items %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t('view.Welcome to the Microposts') %></h1>
    <br>
    <%= link_to t('view.Sign up now!'), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
